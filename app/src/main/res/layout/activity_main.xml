<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola Amigo \nI am an AI chat model which summarises a youtube video and answer to any questions regarding the video with timestamps."
        android:textSize="20sp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:fontFamily="@font/sfpro_medium"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I run on GPT2 model , pardon me if i make any mistakes ,but i promise i wont messup the timestamps(hopefully)."
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:fontFamily="@font/sfpro_medium"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/EtYtLink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Youtube URL"
            android:inputType="text"
            android:layout_gravity="bottom"
            android:background="@drawable/bg"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white2"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Next"
            android:src="@drawable/baseline_arrow_upward_24"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:background="@drawable/circularbg"
            android:padding="10dp"
            android:textSize="16sp"
            android:onClick="onNextButtonClick"/>
    </LinearLayout>

</LinearLayout>